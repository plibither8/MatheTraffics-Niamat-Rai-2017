section.main
	flex-direction column

	div.page
		font-family "Oxygen"
		width 100%
		height 100vh
		padding 3% 0

		div.info
			height 100%
			width 100%
			flex-direction column
			justify-content flex-start	
						
			h1
				color orange
				font-size 400%
				padding 0 0 2% 0
			
			p
				margin 2% 0 0 0
				width 70%
				font-size 180%
				letter-spacing 1.5px
				line-height 2
		
		div.equation
			width 100%
			font-family "Cambria Math"
			font-size 160%
			margin 1% 0
			
			div.equals
				margin 0 2%

			div.frac
				display inline-block
				position relative
				vertical-align middle
				letter-spacing 0.001em
				text-align center
				
				& > span
					display block
					padding 1px 3px
					
				span
					
					&.bottom
						border-top thin solid white
		
					&.symbol
						display none

		&#p1, &#p3
			
			div.info
				ul
					padding 0 15%

					li
						padding 3% 0
						font-size 180%
						list-style-type circle
						
		&#p2
			
			flex-direction column
			justify-content space-around
			
			h1
				color orange
				font-size 500%
				font-family "Roboto"
				padding 0 0 5px 0
			
				span
					color white
			
			p.caption
				font-size 160%

		&#p5
			
			p
				text-align center
				
		&#p6

			.info
				width 100%
				
				.images
					width 100%
					
					.matrix
						width 40%
						flex-direction column

		&#p7
			
			img
				height 20%
				width auto
				margin 4% 0

			div.info
				
				div.equation
					color orange
					font-size 200%

		&#p8

			.info
				width 100%
				
				.images
					height 100%
					width 90%
					justify-content space-around
					
					img
						width 45%
						height auto
						border-radius 10px
						box-shadow 0 0 100px #000
		
		&#p9
			
			.info
				flex-direction row
				width 100%
				
				.matrix
					height 100%
					width 50%
					
				img
					width 85%
					height auto
					border-radius 10px
					box-shadow 0 0 100px #333
		

		&#p10

			.info.flex
				
				table
					border-collapse collapse

				table, tr, td
					border 1px solid #fff
					
				td
					font-family "Bitter"
					font-size 120%
					text-align center
					padding 8px 12px
					
				tr:first-child
					color orange
				
				tr td:first-child
					color orange

		&:nth-child(2n)
			background #222