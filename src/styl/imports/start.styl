section.start
	display block
	position relative
	
	div.logo
		width 100%
		height 40%
		flex-direction column
		
		img
			height 50%
			width auto
		
		p.caption
			margin 2% 0 0 0
			font-size 200%
			font-family "Bitter"
			letter-spacing 1.5px
	
	div.title
		height 30%
		width 100%
		flex-direction column
		
		h1
			color #ff4900
			font-size 600%
			font-family "Roboto"
		
			span
				color white
		
		p.caption
			font-size 180%
			margin 1% 0 0 0
			font-style italic
			
	div.names
		height 30%
		width 100%
		flex-direction column
		p
			color #ff4900
			padding 5px 0
			font-size 125%
			letter-spacing 1.5px
	
section.start::after
	content ""
	background url("../img/traffic.gif") no-repeat center center fixed
	background-size cover
	opacity 0.12
	top 0
	right 0
	bottom 0
	left 0
	position absolute