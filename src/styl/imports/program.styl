section.program
	background #222
	color #fff
	flex-direction column
	width 100%
	padding 3% 5%
	font-family "Bitter"
	height 100%
	
	h1
		color #ff4900
		text-align center
		border-bottom 1px solid #ff4900
		padding 0 0 20px 0
		font-size 320%
		font-weight 100

	p
		margin 4% 1%
		font-size 180%
		display inline-block
		
	input
		color #fff
		letter-spacing 2px
		background-color inherit
		border none
		border-bottom 2px solid #fff
		outline none
		font-size 180%
		width 5%
		margin 0 3% 0 1%
		transition 0.1s all linear
		text-align center
		padding 0 0 3px 0
		
		&:focus, &:active
			border-bottom 4px solid #fff		
	
	button
		background transparent
		font-family 'Bitter'
		border 4px solid #ff4900
		padding 8px 2%
		cursor pointer
		transition 0.5s all
		font-size 150%
		color #ff4900
		letter-spacing 3px
		outline none
		
		&:hover
			color #222
			background #ff4900
			
	div.output
		margin 0 5%
		font-size 140%
		h2
			font-weight 100
			display none
			font-size 120%
			margin 2% 0
		div
			padding 1% 0